@page "/post/{PageName}"
@inherits ShortPageDefault

<MudPaper class="pa-4">
    <article>
        <h1 class="post-title">@Title</h1>
        <div class="post-metadata">
            <span class="post-metadata-author">@Author</span>
            <span class="post-metadata-created">@Created?.ToString("g")</span>
        </div>
        <div class="post-content mt-lg-4">@((MarkupString) PostContent)</div>
    </article>
</MudPaper>
